<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewNotificationActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification title:"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/activity_new_notification_edit_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification content:"
                android:layout_marginTop="25dp"
                android:layout_marginStart="10dp"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/activity_new_notification_edit_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:scrollbars="vertical"
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/activity_new_notification_button_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.Button.Colored"
                android:text="Submit"
                android:layout_gravity="center"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>